@page
@model SkincareProductSalesSystem.Pages.Staff.Contents.DeleteModel

@{
    ViewData["Title"] = "Delete Content";
}

<style>
    .delete-container {
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
        padding: 2rem;
        margin: 2rem auto;
        max-width: 1000px;
    }

    .page-title {
        color: #FF6088;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .warning-text {
        color: #dc3545;
        font-weight: 500;
        margin-bottom: 1.5rem;
    }

    .details-row dt {
        font-weight: 600;
        color: #555;
    }

    .details-row dd {
        margin-bottom: 0.75rem;
    }

    .btn-delete {
        background-color: #dc3545;
        color: white;
        border: none;
        border-radius: 20px;
        padding: 0.5rem 1.5rem;
        font-weight: 500;
    }

    .btn-delete:hover {
        background-color: #c82333;
    }

    .back-link {
        color: #777;
        margin-left: 1rem;
        text-decoration: none;
    }

    .back-link:hover {
        color: #FF6088;
        text-decoration: underline;
    }
</style>

<div class="delete-container">
    <h2 class="page-title">Delete Content</h2>
    <p class="warning-text">Are you sure you want to delete this content?</p>

    <dl class="row details-row">
        <dt class="col-sm-3">Title</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Content.Title)</dd>

        <dt class="col-sm-3">Type</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Content.ContentType)</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">
            @if (Model.Content.IsPublished == true)
            {
                <span>Published</span>
            }
            else
            {
                <span>Draft</span>
            }
        </dd>

        <dt class="col-sm-3">Created</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Content.CreatedAt)</dd>

        <dt class="col-sm-3">Author</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Content.Author.Email)</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Content.Id" />
        <button type="submit" class="btn-delete">Delete</button>
        <a asp-page="./Index" class="back-link">Cancel</a>
    </form>
</div>
