@page
@model SkincareProductSalesSystem.Pages.Staff.Categories.DeleteModel

@{
    ViewData["Title"] = "Delete Category";
}

<style>
    .delete-container {
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
        padding: 2rem;
        margin: 2rem auto;
        max-width: 1000px;
    }

    .page-header {
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #f0f0f0;
    }

    .page-title {
        color: #dc3545;
        font-weight: 700;
        margin: 0 0 0.5rem 0;
    }

    .page-subtitle {
        color: #888;
        font-size: 1rem;
        font-weight: 400;
        margin: 0;
    }

    .warning-box {
        background-color: rgba(220, 53, 69, 0.1);
        border-left: 4px solid #dc3545;
        padding: 1.5rem;
        border-radius: 8px;
        margin-bottom: 2rem;
    }

    .warning-title {
        color: #dc3545;
        font-weight: 600;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
    }

    .warning-message {
        color: #666;
        margin-bottom: 0;
    }

    .details-card {
        background-color: #f9f9f9;
        border-radius: 10px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .details-label {
        color: #666;
        font-weight: 600;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
    }

    .details-value {
        color: #333;
        font-weight: 500;
        font-size: 1.1rem;
    }

    .action-buttons {
        margin-top: 2rem;
        display: flex;
        justify-content: space-between;
    }

    .btn-action {
        padding: 0.6rem 1.5rem;
        border-radius: 25px;
        font-weight: 600;
        display: flex;
        align-items: center;
        transition: all 0.3s;
        text-decoration: none;
    }

    .btn-cancel {
        color: #666;
        border: 1px solid #ddd;
        background: white;
    }

    .btn-cancel:hover {
        background-color: #f5f5f5;
        color: #555;
        border-color: #ccc;
    }

    .btn-delete {
        background-color: #dc3545;
        color: white;
        border: none;
    }

    .btn-delete:hover {
        background-color: #c82333;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
        color: white;
    }

    .status-badge {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        border-radius: 50px;
        font-size: 0.85rem;
        font-weight: 500;
    }

    .status-active {
        background-color: #E6F8F0;
        color: #28a745;
    }

    .status-inactive {
        background-color: #F8F0F0;
        color: #dc3545;
    }
</style>

<div class="container delete-container">
    <div class="page-header">
        <h2 class="page-title">Delete Category</h2>
        <p class="page-subtitle">Please confirm you want to delete this category</p>
    </div>

    <div class="warning-box">
        <h5 class="warning-title">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> Warning
        </h5>
        <p class="warning-message">
            This action cannot be undone. Deleting this category may affect products associated with it.
        </p>
    </div>

    <div class="details-card">
        <div class="row">
            <div class="col-md-6 mb-3">
                <p class="details-label">Category Name</p>
                <p class="details-value">@Model.Category.Name</p>
            </div>

            <div class="col-md-6 mb-3">
                <p class="details-label">Status</p>
                <div>
                    @if (Model.Category.IsActive)
                    {
                        <span class="status-badge status-active">Active</span>
                    }
                    else
                    {
                        <span class="status-badge status-inactive">Inactive</span>
                    }
                </div>
            </div>

            <div class="col-12">
                <p class="details-label">Description</p>
                @if (string.IsNullOrWhiteSpace(Model.Category.Description))
                {
                    <p class="text-muted fst-italic">No description provided</p>
                }
                else
                {
                    <p>@Model.Category.Description</p>
                }
            </div>
        </div>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Category.Id" />

        <div class="action-buttons">
            <a asp-page="./Index" class="btn-action btn-cancel">
                <i class="bi bi-x-circle me-2"></i> Cancel
            </a>
            <button type="submit" class="btn-action btn-delete">
                <i class="bi bi-trash me-2"></i> Delete Category
            </button>
        </div>
    </form>
</div>
