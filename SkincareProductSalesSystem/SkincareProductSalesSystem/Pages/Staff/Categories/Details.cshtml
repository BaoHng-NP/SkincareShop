@page
@model SkincareProductSalesSystem.Pages.Staff.Categories.DetailsModel

@{
    ViewData["Title"] = "Category Details";
}

<style>
    .details-container {
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
        padding: 2rem;
        margin: 2rem auto;
        max-width: 1000px;
    }

    .page-header {
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #f0f0f0;
    }

    .page-title {
        color: #FF6088;
        font-weight: 700;
        margin: 0 0 0.5rem 0;
        display: flex;
        align-items: center;
    }

    .category-name {
        font-size: 1.25rem;
        margin-left: 0.5rem;
        font-weight: 600;
        color: #555;
    }

    .details-card {
        background-color: #FFF9FA;
        border-radius: 10px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .details-label {
        color: #666;
        font-weight: 600;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .details-value {
        color: #333;
        font-weight: 500;
        font-size: 1.1rem;
    }

    .details-description {
        white-space: pre-line;
        line-height: 1.6;
        color: #666;
    }

    .status-badge {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        border-radius: 50px;
        font-size: 0.85rem;
        font-weight: 500;
        margin-top: 0.5rem;
    }

    .status-active {
        background-color: #E6F8F0;
        color: #28a745;
    }

    .status-inactive {
        background-color: #F8F0F0;
        color: #dc3545;
    }

    .action-buttons {
        margin-top: 2rem;
        display: flex;
        gap: 1rem;
    }

    .btn-action {
        padding: 0.6rem 1.5rem;
        border-radius: 25px;
        font-weight: 600;
        display: flex;
        align-items: center;
        transition: all 0.3s;
        text-decoration: none;
    }

    .btn-back {
        color: #666;
        border: 1px solid #ddd;
        background: white;
    }

    .btn-back:hover {
        background-color: #f5f5f5;
        color: #555;
        border-color: #ccc;
    }

    .btn-edit {
        background-color: #FF99B0;
        color: white;
        border: none;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    }

    .btn-edit:hover {
        background-color: #FF6088;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
        color: white;
    }
</style>

<div class="container details-container">
    <div class="page-header">
        <h2 class="page-title">
            Category Details: <span class="category-name">@Model.Category.Name</span>
        </h2>
    </div>

    <div class="details-card">
        <div class="row">
            <div class="col-md-6 mb-4">
                <p class="details-label">Category ID</p>
                <p class="details-value">@Model.Category.Id</p>
            </div>

            <div class="col-md-6 mb-4">
                <p class="details-label">Status</p>
                <div>
                    @if (Model.Category.IsActive)
                    {
                        <span class="status-badge status-active">
                            <i class="bi bi-check-circle me-1"></i> Active
                        </span>
                    }
                    else
                    {
                        <span class="status-badge status-inactive">
                            <i class="bi bi-x-circle me-1"></i> Inactive
                        </span>
                    }
                </div>
            </div>

            <div class="col-12">
                <p class="details-label">Description</p>
                @if (string.IsNullOrWhiteSpace(Model.Category.Description))
                {
                    <p class="details-description text-muted fst-italic">No description provided</p>
                }
                else
                {
                    <p class="details-description">@Model.Category.Description</p>
                }
            </div>
        </div>
    </div>

    <div class="action-buttons">
        <a asp-page="./Index" class="btn-action btn-back">
            <i class="bi bi-arrow-left me-2"></i> Back to List
        </a>
        <a asp-page="./Edit" asp-route-id="@Model.Category.Id" class="btn-action btn-edit">
            <i class="bi bi-pencil-square me-2"></i> Edit Category
        </a>
    </div>
</div>
