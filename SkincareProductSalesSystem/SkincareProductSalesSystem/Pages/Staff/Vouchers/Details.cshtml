@page
@model SkincareProductSalesSystem.Pages.Staff.Vouchers.DetailsModel

@{
    ViewData["Title"] = "Voucher Details";
}

<style>
    .details-container {
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
        padding: 2rem;
        margin: 2rem auto;
        max-width: 1000px;
    }

    .page-title {
        color: #FF6088;
        font-weight: 700;
        margin-bottom: 1.5rem;
    }

    .details-row dt {
        color: #555;
        font-weight: 600;
    }

    .details-row dd {
        margin-bottom: 1rem;
    }

    .action-links {
        margin-top: 1.5rem;
    }

    .action-links a {
        display: inline-block;
        margin-right: 1rem;
        color: #FF99B0;
        text-decoration: none;
    }

    .action-links a:hover {
        color: #FF6088;
        text-decoration: underline;
    }
</style>

<div class="container details-container">
    <h2 class="page-title">Voucher Details</h2>

    <dl class="row details-row">
        <dt class="col-sm-3">Voucher Code</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Discount.Code)</dd>

        <dt class="col-sm-3">Discount Type</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Discount.DiscountType)</dd>

        <dt class="col-sm-3">Discount Value</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Discount.DiscountValue)</dd>

        <dt class="col-sm-3">Required Points</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Discount.RequiredPoints)</dd>

        <dt class="col-sm-3">Expiration Date</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Discount.ExpirationDate)</dd>

        <dt class="col-sm-3">Minimum Order Value</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Discount.MinOrderValue) VND</dd>

        <dt class="col-sm-3">Maximum Discount</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Discount.MaxDiscount) VND</dd>

        <dt class="col-sm-3">Created At</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Discount.CreatedAt)</dd>
    </dl>

    <div class="action-links">
        <a asp-page="./Edit" asp-route-id="@Model.Discount.Id">Edit</a>
        <a asp-page="./Index">Back to List</a>
    </div>
</div>
