@page
@model SkincareProductSalesSystem.Pages.Staff.Vouchers.EditModel

@{
    ViewData["Title"] = "Edit Voucher";
}

<style>
    .form-container {
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
        padding: 2rem;
        margin: 2rem auto;
        max-width: 1000px;
    }

    .page-title {
        color: #FF6088;
        font-weight: 700;
        margin-bottom: 1.5rem;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .control-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
        display: block;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #e0e0e0;
        padding: 0.5rem 0.75rem;
    }

    .form-control:focus {
        border-color: #FF99B0;
        box-shadow: 0 0 0 0.2rem rgba(255, 153, 176, 0.25);
    }

    .btn-submit {
        background-color: #FF99B0;
        color: white;
        border: none;
        border-radius: 20px;
        padding: 0.5rem 1.5rem;
        margin-top: 1rem;
        font-weight: 500;
    }

    .btn-submit:hover {
        background-color: #FF6088;
    }

    .back-link {
        display: inline-block;
        margin-top: 1rem;
        color: #FF99B0;
        text-decoration: none;
    }

    .back-link:hover {
        color: #FF6088;
        text-decoration: underline;
    }
</style>

<div class="container form-container">
    <h2 class="page-title">Edit Voucher</h2>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Discount.Id" />
        <input type="hidden" asp-for="Discount.CreatedAt" />

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Discount.Code" class="control-label">Voucher Code</label>
                    <input asp-for="Discount.Code" class="form-control" />
                    <span asp-validation-for="Discount.Code" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Discount.DiscountType" class="control-label">Discount Type</label>
                    <select asp-for="Discount.DiscountType" class="form-control">
                        <option value="Percentage">Percentage</option>
                        <option value="FixedAmount">Fixed Amount</option>
                    </select>
                    <span asp-validation-for="Discount.DiscountType" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Discount.DiscountValue" class="control-label">Discount Value</label>
                    <input asp-for="Discount.DiscountValue" class="form-control" />
                    <span asp-validation-for="Discount.DiscountValue" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Discount.RequiredPoints" class="control-label">Required Points</label>
                    <input asp-for="Discount.RequiredPoints" class="form-control" />
                    <span asp-validation-for="Discount.RequiredPoints" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Discount.ExpirationDate" class="control-label">Expiration Date</label>
                    <input asp-for="Discount.ExpirationDate" class="form-control" type="date" />
                    <span asp-validation-for="Discount.ExpirationDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Discount.MinOrderValue" class="control-label">Minimum Order Value</label>
                    <input asp-for="Discount.MinOrderValue" class="form-control" />
                    <span asp-validation-for="Discount.MinOrderValue" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Discount.MaxDiscount" class="control-label">Maximum Discount Amount</label>
                    <input asp-for="Discount.MaxDiscount" class="form-control" />
                    <span asp-validation-for="Discount.MaxDiscount" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn-submit">Save Changes</button>
        </div>
    </form>

    <a asp-page="Index" class="back-link">← Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
