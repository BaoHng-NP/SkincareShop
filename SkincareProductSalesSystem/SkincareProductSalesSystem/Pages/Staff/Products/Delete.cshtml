@page
@model SkincareProductSalesSystem.Pages.Staff.Products.DeleteModel

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg p-4" style="max-width: 600px; width: 100%; border-radius: 10px;">
        <div class="card-body text-center">
            <h2 class="text-danger">⚠️ Delete Product</h2>
            <p class="text-muted">Are you sure you want to delete this product?</p>

            <div class="text-center mb-3">
                <img src="@Model.Product.ImageUrl" alt="Product Image" class="img-fluid rounded shadow"
                     style="max-width: 200px; height: auto;">
            </div>

            <h4 class="text-primary">@Model.Product.Name</h4>
            <p class="text-muted">@Model.Product.Description</p>

            <div class="row">
                <div class="col-6 text-start"><strong>Price:</strong> @Model.Product.Price ₫</div>
                <div class="col-6 text-end"><strong>Stock:</strong> @Model.Product.Stock</div>
            </div>
            <div class="row">
                <div class="col-6 text-start"><strong>Brand:</strong> @Model.Product.Brand.BrandName</div>
                <div class="col-6 text-end"><strong>Category:</strong> @Model.Product.Category.Name</div>
            </div>

            <form method="post" class="mt-4">
                <input type="hidden" asp-for="Product.Id" />
                <button type="submit" class="btn btn-danger w-100">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
            </form>

            <a asp-page="./Index" class="btn btn-secondary mt-3 w-100">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

<!-- Bootstrap Icons & FontAwesome -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
