@page
@model SkincareProductSalesSystem.Pages.Staff.Products.DetailsModel

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Product Details</h2>

    <div class="card shadow-lg">
        <div class="row g-0">
            <div class="col-md-4 d-flex align-items-center justify-content-center p-3">
                <img src="@Model.Product.ImageUrl" alt="Product Image" class="img-fluid rounded">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title">@Model.Product.Name</h3>
                    <p class="text-muted">@Model.Product.Description</p>

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Price:</strong> $@Model.Product.Price</li>
                        <li class="list-group-item"><strong>Stock:</strong> @Model.Product.Stock</li>
                        <li class="list-group-item"><strong>Rating:</strong> ⭐ @Model.Product.Rating / 5</li>
                        <li class="list-group-item"><strong>Brand:</strong> @Model.Product.Brand.BrandName</li>
                        <li class="list-group-item"><strong>Category:</strong> @Model.Product.Category.Name</li>
                        <li class="list-group-item"><strong>Created At:</strong> @Model.Product.CreatedAt</li>
                    </ul>

                    <div class="mt-3">
                        <a asp-page="./Edit" asp-route-id="@Model.Product.Id" class="btn btn-primary me-2">Edit</a>
                        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <h3 class="mt-5 text-center">Warehouse</h3>
    <a asp-page="./Add" asp-route-id="@Model.Product.Id" class="btn btn-primary me-2">Add Item</a>

    <table class="table table-bordered table-hover text-center align-middle mt-3">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Manufacture Date</th>
                <th>Expiry Date</th>
                <th>Quantity</th>
                <th>Created Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Detail)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.ManufactureDate</td>
                    <td>@item.ExpiryDate</td>
                    <td>@item.Quantity</td>
                    <td>@item.CreatedDate</td>
                </tr>
            }
        </tbody>
    </table>
</div>
