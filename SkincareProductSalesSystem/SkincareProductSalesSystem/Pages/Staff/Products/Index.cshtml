@page
@model SkincareProductSalesSystem.Pages.Staff.Products.IndexModel

@{
    ViewData["Title"] = "Product List";
}

<h1 class="text-center my-4">Product List</h1>


<div class="container"> 
    <p class="text-start">
        <a asp-page="Create" class="btn btn-success">+ Add New Product</a>
    </p>
<table class="table table-bordered table-hover text-center align-middle">
    <thead class="table-dark">
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Price (VNĐ)</th>
            <th>Stock</th>
            <th>Brand</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Product)
        {
            <tr>
                <td>
                    <img src="@item.ImageUrl" alt="@item.Name" class="img-thumbnail" style="width: 80px; height: 80px; object-fit: cover;">
                </td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                <td>@Html.DisplayFor(modelItem => item.Brand.BrandName)</td>
                <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏️ Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">ℹ️ Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">🗑️ Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>
