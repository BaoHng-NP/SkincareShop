@page
@model SkincareProductSalesSystem.Pages.Customer.VNPayReturnModel
@{
    ViewData["Title"] = "VNPay Payment Result";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="d-flex justify-content-center align-items-center vh-100 bg-light">

    <div class="text-center p-4 bg-white shadow rounded">
        <h2>@Model.Message</h2>
        <p>Redirecting to your order history in <span id="countdown">3</span> seconds...</p>
    </div>

    <script>
        let count = 3;
        const countdownElem = document.getElementById("countdown");

        function updateCountdown() {
            count--;
            countdownElem.innerText = count;
            if (count === 0) {
                window.location.href = "/Customer/OrderHistory";
            } else {
                setTimeout(updateCountdown, 1000);
            }
        }

        setTimeout(updateCountdown, 1000);
    </script>

</body>
</html>
<script>
    localStorage.removeItem("selectedVoucherId");
</script>