@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<style>
    :root {
        --primary-pink: #FFC0CB;
        --light-pink: #FFE4E1;
        --dark-pink: #FF99B0;
        --accent-green: #C9E4CA;
        --text-dark: #4A4A4A;
        --text-light: #7A7A7A;
    }

    body {
        font-family: 'Poppins', sans-serif;
        color: var(--text-dark);
        background-color: #FFF9FA;
    }

    .hero-section {
        position: relative;
        background: url('https://svenskskincare.com/wp-content/uploads/2023/05/natural-treatment-table-1.jpg') no-repeat center center;
        background-size: cover;
        color: white;
        text-align: center;
        padding: 120px 20px;
        min-height: 500px;
        border-radius: 0 0 50px 50px;
        overflow: hidden;
    }

    .hero-section::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(rgba(255, 192, 203, 0.7), rgba(255, 153, 176, 0.8));
        z-index: 1;
    }

    .hero-section>div {
        position: relative;
        z-index: 2;
    }

    .hero-section h1 {
        font-size: 3.2rem;
        font-weight: 800;
        margin-bottom: 1.5rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    }

    .hero-section p {
        font-size: 1.3rem;
        max-width: 600px;
        margin: 0 auto 2rem;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.15);
    }

    .hero-btn {
        background-color: white;
        color: var(--dark-pink);
        font-weight: 600;
        border-radius: 30px;
        padding: 12px 28px;
        font-size: 1.1rem;
        border: none;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    .hero-btn:hover {
        transform: translateY(-3px);
        background-color: #FFF9FA;
        color: #FF6088;
        box-shadow: 0 6px 20px rgba(255, 96, 136, 0.2);
    }

    .section-title {
        color: var(--dark-pink);
        font-weight: 700;
        font-size: 2.2rem;
        margin-bottom: 2rem;
        text-align: center;
        position: relative;
        padding-bottom: 15px;
    }

    .section-title:after {
        content: '';
        position: absolute;
        width: 80px;
        height: 3px;
        background: linear-gradient(to right, var(--primary-pink), var(--dark-pink));
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        border-radius: 10px;
    }

    .about-section {
        padding: 5rem 0;
        background-color: white;
        border-radius: 20px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.03);
        margin-top: -50px;
        position: relative;
        z-index: 10;
    }

    .about-image {
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 25px rgba(255, 153, 176, 0.2);
        transition: transform 0.5s ease;
    }

    .about-image:hover {
        transform: translateY(-10px);
    }

    .about-text {
        padding: 0 2rem;
    }

    .about-text p {
        color: var(--text-light);
        line-height: 1.8;
        margin-bottom: 1.5rem;
    }

    .read-more {
        color: var(--dark-pink);
        font-weight: 600;
        text-decoration: none;
        position: relative;
        transition: all 0.3s ease;
    }

    .read-more:after {
        content: '→';
        margin-left: 6px;
        opacity: 0;
        transition: all 0.3s ease;
    }

    .read-more:hover:after {
        opacity: 1;
        margin-left: 10px;
    }

    .read-more:hover {
        color: #FF6088;
    }

    .blog-section {
        padding: 5rem 0 3rem;
    }

    .blog-card {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        height: 100%;
        border: none;
    }

    .blog-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(255, 153, 176, 0.2);
    }

    .blog-card img {
        height: 220px;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .blog-card:hover img {
        transform: scale(1.05);
    }

    .blog-card .card-body {
        padding: 1.8rem;
    }

    .blog-card .card-title {
        color: var(--text-dark);
        font-weight: 600;
        font-size: 1.25rem;
        margin-bottom: 1rem;
    }

    .blog-card .card-text {
        color: var(--text-light);
        margin-bottom: 1.5rem;
    }

    .blog-btn {
        background-color: var(--primary-pink);
        color: white;
        border: none;
        border-radius: 30px;
        padding: 8px 22px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .blog-btn:hover {
        background-color: var(--dark-pink);
        color: white;
        transform: translateY(-2px);
    }

    .faq-section {
        padding: 4rem 0;
        background-color: white;
        border-radius: 20px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.03);
        margin: 4rem 0;
    }

    .accordion-item {
        border: 1px solid #FFE4E1;
        border-radius: 10px !important;
        overflow: hidden;
        margin-bottom: 1rem;
    }

    .accordion-button {
        font-weight: 600;
        color: var(--text-dark);
        background-color: #FFF9FA;
        padding: 1.2rem 1.5rem;
    }

    .accordion-button:not(.collapsed) {
        color: var(--dark-pink);
        background-color: #FFF0F2;
        box-shadow: none;
    }

    .accordion-button:focus {
        box-shadow: none;
        border-color: #FFE4E1;
    }

    .accordion-button:not(.collapsed)::after {
        color: var(--dark-pink);
    }

    .accordion-body {
        padding: 1.5rem;
        color: var(--text-light);
        background-color: white;
    }

    .newsletter {
        background: linear-gradient(135deg, #FFC0CB, #FFA6B9);
        padding: 4rem 2rem;
        border-radius: 20px;
        text-align: center;
        box-shadow: 0 10px 30px rgba(255, 153, 176, 0.2);
        margin: 3rem 0;
    }

    .newsletter h3 {
        color: white;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
    }

    .newsletter p {
        color: white;
        max-width: 600px;
        margin: 0 auto 2rem;
        font-size: 1.1rem;
    }

    .newsletter-form {
        max-width: 500px;
        margin: 0 auto;
    }

    .newsletter-input {
        border-radius: 30px 0 0 30px;
        padding: 12px 20px;
        border: none;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .newsletter-btn {
        background-color: white;
        color: var(--dark-pink);
        font-weight: 600;
        border-radius: 0 30px 30px 0;
        padding: 12px 25px;
        border: none;
        transition: all 0.3s ease;
    }

    .newsletter-btn:hover {
        background-color: #FFF0F2;
        color: #FF6088;
    }

    .features {
        padding: 1rem 0 4rem;
    }

    .feature-item {
        text-align: center;
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .feature-icon {
        font-size: 2.5rem;
        color: var(--dark-pink);
        margin-bottom: 1.5rem;
    }

    .feature-title {
        font-weight: 600;
        margin-bottom: 1rem;
        color: var(--text-dark);
    }

    .feature-text {
        color: var(--text-light);
        line-height: 1.7;
    }

    .cta-section {
        background: linear-gradient(to right, #FF99B0, #FFA6B9);
        padding: 4rem 0;
        text-align: center;
        color: white;
        border-radius: 20px;
        margin: 3rem 0;
        box-shadow: 0 10px 30px rgba(255, 153, 176, 0.3);
    }

    .cta-section h2 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
    }

    .cta-section p {
        max-width: 600px;
        margin: 0 auto 2rem;
        font-size: 1.1rem;
        opacity: 0.9;
    }

    .cta-btn {
        background-color: white;
        color: var(--dark-pink);
        font-weight: 600;
        border-radius: 30px;
        padding: 12px 30px;
        font-size: 1.1rem;
        border: none;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
        transition: all 0.3s ease;
    }

    .cta-btn:hover {
        transform: translateY(-3px);
        background-color: #FFF9FA;
        color: #FF6088;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
    }

    .scroll-top {
        position: fixed;
        bottom: 30px;
        right: 30px;
        width: 50px;
        height: 50px;
        background-color: var(--dark-pink);
        color: white;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 1.2rem;
        cursor: pointer;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
        transition: all 0.3s ease;
        z-index: 99;
        opacity: 0;
        visibility: hidden;
    }

    .scroll-top.active {
        opacity: 1;
        visibility: visible;
    }

    .scroll-top:hover {
        background-color: #FF6088;
        transform: translateY(-3px);
    }

    @@media (max-width: 768px) {
        .hero-section {
            padding: 80px 20px;
            min-height: 400px;
        }

        .hero-section h1 {
            font-size: 2.2rem;
        }

        .about-text {
            padding: 0;
            margin-top: 2rem;
        }

        .section-title {
            font-size: 1.8rem;
        }
    }
</style>

