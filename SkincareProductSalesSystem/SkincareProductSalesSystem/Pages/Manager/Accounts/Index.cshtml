@page
@model SkincareProductSalesSystem.Pages.Manager.Accounts.IndexModel

@{
    ViewData["Title"] = "Accounts Management";
}
<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    thead {
        background-color: black;
        color: white;
    }

    th, td {
        padding: 10px;
        border-bottom: 1px solid #ddd;
        text-align: left;
    }

    tbody tr:hover {
        background-color: #f5f5f5;
    }

    form {
        margin-bottom: 20px;
    }

    .btn {
        padding: 5px 10px;
        border: none;
        border-radius: 4px;
        color: white;
        text-decoration: none;
        display: inline-block;
    }


    .btn-edit {
        background-color: #28a745;
    }

    .btn-details {
        background-color: #6c757d;
    }

    .btn-delete {
        background-color: #dc3545;
    }
</style>

<div class="container">
    <h1>Accounts Management</h1>

    <p>
        <a asp-page="Create" class="btn btn-success">Create New</a>
    </p>

    <form method="get">
        <label for="roleFilter">Filter by Role:</label>
        <select name="RoleFilter" id="roleFilter" onchange="this.form.submit()">
            <option value="">All</option>
            <option value="1" selected="@(Model.RoleFilter == 1)">Staff</option>
            <option value="2" selected="@(Model.RoleFilter == 2)">Customer</option>
        </select>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.User.FirstOrDefault().FullName)</th>
                <th>@Html.DisplayNameFor(model => model.User.FirstOrDefault().Email)</th>
                <th>@Html.DisplayNameFor(model => model.User.FirstOrDefault().Phone)</th>
                <th>@Html.DisplayNameFor(model => model.User.FirstOrDefault().Address)</th>
                <th>@Html.DisplayNameFor(model => model.User.FirstOrDefault().CreatedAt)</th>
                <th>@Html.DisplayNameFor(model => model.User.FirstOrDefault().Role)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.User)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                    <td>@Html.DisplayFor(modelItem => item.Role.RoleName)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-edit">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-details">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>