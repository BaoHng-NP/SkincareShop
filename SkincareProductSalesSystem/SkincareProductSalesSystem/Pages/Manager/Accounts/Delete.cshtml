@page
@model SkincareProductSalesSystem.Pages.Manager.Accounts.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<style>
    .delete-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        text-align: center;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

    .delete-header {
        margin-bottom: 20px;
        color: #d9534f;
    }

    .delete-table {
        width: 100%;
        margin-bottom: 20px;
    }

        .delete-table dt {
            font-weight: bold;
            display: inline-block;
            width: 40%;
            text-align: left;
            padding-right: 10px;
        }

        .delete-table dd {
            display: inline-block;
            width: 55%;
            text-align: left;
        }

    .delete-actions {
        margin-top: 20px;
    }

    .btn {
        padding: 8px 15px;
        border: none;
        border-radius: 4px;
        color: white;
        text-decoration: none;
        display: inline-block;
        margin: 5px;
    }

    .btn-danger {
        background-color: #d9534f;
    }

    .btn-back {
        background-color: #007bff;
    }
</style>

<div class="delete-container">
    <h1 class="delete-header">Are you sure you want to delete this user?</h1>
    <dl class="delete-table">
        <dt>Full Name:</dt>
        <dd>@Html.DisplayFor(model => model.User.FullName)</dd>

        <dt>Email:</dt>
        <dd>@Html.DisplayFor(model => model.User.Email)</dd>

        <dt>Phone:</dt>
        <dd>@Html.DisplayFor(model => model.User.Phone)</dd>

        <dt>Address:</dt>
        <dd>@Html.DisplayFor(model => model.User.Address)</dd>

        <dt>Created At:</dt>
        <dd>@Html.DisplayFor(model => model.User.CreatedAt)</dd>

        <dt>Role:</dt>
        <dd>@Html.DisplayFor(model => model.User.Role.RoleName)</dd>
    </dl>

    <form method="post" class="delete-actions">
        <input type="hidden" asp-for="User.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-back">Back to List</a>
    </form>
</div>